{
  "name": "entryboss-discovery-tool",
  "version": "1.0.0",
  "description": "A lightweight web tool that aggregates cycling events from EntryBoss for Victorian clubs",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "serve": "./serve.sh",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install"
  },
  "keywords": [
    "cycling",
    "events",
    "calendar",
    "entryboss",
    "victoria",
    "australia"
  ],
  "author": "EntryBoss Discovery Tool",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  }
}
